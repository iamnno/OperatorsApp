<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    tools:context=".ui.operator1.FirstOperatorFragment">

    <TextView
        android:id="@+id/params_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/parameters"
        android:textColor="#99000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/param1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/param1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/params_title" />

    <TextView
        android:id="@+id/param2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/param2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/param1_text" />

    <TextView
        android:id="@+id/param3_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/param3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/param2_text" />

    <Button
        android:id="@+id/button_motor1_cw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motor 1 CW"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/button_motor1_ccw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_motor1_ccw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motor 1 CCW"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/button_motor2_cw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_motor2_cw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motor 2 CW"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/button_motor2_ccw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_motor2_ccw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motor 2 CCW"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
